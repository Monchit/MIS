

<style>
    div.dataTables_wrapper {
        width: 100%;
        margin: 0 auto;
    }
    div.containTable{
        width:100%;
    }
    th {
        border-right-style: solid;
        border-style: solid;
        border-width: 0 1px 0 0;
        border-right: 1px solid #ddd;
    }
</style>

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable({
            "scrollX": true,
            "scrollCollapse": true,
            "fixedColumns": {
                "leftColumns": 1
            },
            "columnDefs": [{
                "visible": false
            }]
        });
    });
</script>

<div class="containTable">
    <table id="example" class="cell-border stripe nowrap">
        <thead>
            <tr>
                <th rowspan="2">Job No.</th>
                <th colspan="11">Curing</th>
                <th rowspan="1">Postcure</th>
                <th colspan="3">Packing</th>
                <th colspan="7">Rubber1 compound</th>
                <th colspan="7">Rubber2 compound</th>
                <th colspan="3">Metal case1</th>
                <th colspan="3">Metal case2</th>
                <th colspan="3">Spring1</th>
                <th colspan="3">Spring2</th>
            </tr>
            <tr>
                <th>Total WIP</th>
                <th>Last Process</th>
                <th>Plant</th>
                <th>WC</th>             
                <th>Item</th>
                <th>Curing Date</th>
                <th>Lot No.</th>
                <th>Curing Qty</th>
                <th>Good Item Qty</th>
                <th>Curing Start Date</th>
                <th>Wip Curing Qty</th>
                <th>Postcure Start Date</th>   
                <th>Greasing Date</th>
                <th>Packing Date</th>
                <th>Wip Packing Qty</th>
                <th>Compound</th>
                <th>Weight (k.g.)</th>
                <th>Stock in date</th>
                <th>Batch No.1</th>
                <th>Batch No.2</th>
                <th>Batch No.3</th>
                <th>Batch No.4</th>
                <th>Compound</th>
                <th>Weight (k.g.)</th>
                <th>Stock in date</th>
                <th>Batch No.1</th>
                <th>Batch No.2</th>
                <th>Batch No.3</th>
                <th>Batch No.4</th>
                <th>Item</th>
                <th>Qty</th>
                <th>Process</th>
                <th>Item</th>
                <th>Qty</th>
                <th>Process</th>
                <th>Item</th>
                <th>Qty</th>
                <th>Process</th>
                <th>Item</th>
                <th>Qty</th>
                <th>Process</th>        
            </tr>
        </thead>   
    <tbody>
        
        @foreach (var item in ViewBag.Inform)
{
    <tr>
        <td>@item.job_order_no</td>
        <td>@item.total_wip</td>
        <td>@item.last_process</td>
        <td>@if (item.plant.Trim() == "FTB")
            {
                <text>OSP1</text>
            }
            else if (item.plant.Trim() == "FTC")
            {
                <text>OSP2</text>
            }
            else if (item.plant.Trim() == "FTD" || item.plant.Trim() == "FTH")
            {
                <text>RSP</text>
            }
            else if (item.plant.Trim() == "FTG")
            {
                <text>BPK</text>
            }
            else if (item.plant.Trim() == "FTE")
            {
                <text>PTN</text>
            }
            else if (item.plant.Trim() == "FTF")
            {
                <text>MIXING</text>
            }
            else if (item.plant.Trim() == "FTI")
            {
                <text>BPK3</text> 
            }
            else
            {
                <text>Other</text>  
            }     
        </td>

        <td>@item.wc/@item.machine_no</td>       
        <td>@item.finished_goods_code</td>
        <td>@item.curing_date</td>  
        <td>@item.lot_no</td>      
        <td>@item.curing_qty</td>
        <td>@item.good_item_qty</td>        
        <td>@item.curing_start_date</td>
        <td>@item.wip_curing_qty</td>
        <td>@item.post_start_date</td>
        <td>@item.greasing_date</td>
        <td>@item.packing_date</td>
        <td>@item.wip_packing_qty</td>
        <td>@item.rb1_compound</td>
        <td>@item.rb1_weight</td>
        <td>@item.rb1_stock_in_date</td>
        <td>@item.rb1_batch_no1</td>
        <td>@item.rb1_batch_no2</td>
        <td>@item.rb1_batch_no3</td>
        <td>@item.rb1_batch_no4</td>
        <td>@item.rb2_compound</td>
        <td>@item.rb2_weight</td>
        <td>@item.rb2_stock_in_date</td>
        <td>@item.rb2_batch_no1</td>
        <td>@item.rb2_batch_no2</td>
        <td>@item.rb2_batch_no3</td>
        <td>@item.rb2_batch_no4</td>
        <td>@item.mc1_item</td>
        <td>@item.mc1_qty</td>
        <td>@item.mc1_process</td>
        <td>@item.mc2_item</td>
        <td>@item.mc2_qty</td>
        <td>@item.mc2_process</td>
        <td>@item.sp1_item</td>
        <td>@item.sp1_qty</td>
        <td>@item.sp1_process</td>
        <td>@item.sp2_item</td>
        <td>@item.sp2_qty</td>
        <td>@item.sp2_process</td>  
    </tr>
}
</table>
</div>
<div id="divTotal" class="row-fluid">
    <div class="span3 offset1"><b>Total WIP : @ViewBag.SumWip  </b></div>
</div>