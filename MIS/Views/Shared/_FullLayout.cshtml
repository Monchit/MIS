<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=edge" />
    <title>@ViewBag.Title - MIS </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style type="text/css">
        body {
            padding-top: 60px;
            padding-bottom: 20px;
        }
        @@media (max-width: 980px) {
            /* Enable use of floated navbar text */
            .navbar-text.pull-right {
                float: none;
                padding-left: 5px;
                padding-right: 5px;
            }
        }
        .headtext {
            font-size:22px;
            font-weight:200;
        }
        .headred {
            color: red;
        }
        .headblue {
            color: blue;
        }
    </style>
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="../Scripts/html5shiv.js"></script>
    <![endif]-->

    @Styles.Render("~/Content/datatables")
    @Styles.Render("~/Content/themes/base/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/highcharts")
    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="brand" href="#"><span class="headblue">W</span>ORK <span class="headblue">I</span>N <span class="headblue">P</span>ROCESS</a>
          <div class="nav-collapse collapse">
            <p class="navbar-text pull-right headtext">
              <span class="headred">M</span>anufacturing <span class="headred">I</span>nformation <span class="headred">S</span>ystem
            </p>
            <ul class="nav">
              <li><a href="@Url.Action("Index","Home")"><i class="icon-home"></i> Main Menu</a></li>
              <li><a href="@Url.Action("BI","Home")"><i class="icon-gift"></i> BI</a></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    @*<div class="row-fluid">
        <div class="span6">@ViewBag.Title</div>
        <div class="span6">Manufacturing Information System</div>
    </div>*@
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                @RenderBody()
            </div>
        </div>
        <hr>
        <div class="footer">
            <p>&copy; Thai NOK 2016</p>
        </div>
    </div>
</body>
</html>